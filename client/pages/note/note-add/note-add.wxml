<!--pages/note/note-add/note-add.wxml-->
<view class='page'>
  <view class="weui-cells__title">笔记</view>
  <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
          <view class="weui-cell__bd">
              <textarea class="weui-textarea" placeholder="请输入文本" style="height: 700rpx" />
              <view class="weui-textarea-counter">0/200</view>
          </view>
      </view>
  </view>

  <view class="weui-cells__title">隐私</view>
  <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_switch">
          <view class="weui-cell__bd">是否公开</view>
          <view class="weui-cell__ft">
              <switch checked />
          </view>
      </view>
  </view>

  <view class="note-add-confirm">
      <button class="weui-btn" type="primary" catchtap="onTapToConfirm">添加</button>
  </view>
</view>